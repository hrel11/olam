---
import type { ImageMetadata } from "astro";
import { Image, Picture } from "astro:assets";
import { iconMap } from "~/components/iconMap";

const { class: className, alt, ...rest } = Astro.props;

const loadExtension = (img: ImageMetadata | null) => {
  if (img) {
    const url = new URL(img.src, import.meta.url);
    return url.pathname.split(".").pop();
  }
  return "";
};

const img = iconMap[alt] || null;
const extension = loadExtension(img);
---

{
  extension === "svg" ? (
    <Image
      class={`inline-block align-baseline ${className}`}
      loading="eager"
      alt={`icon-${alt}`}
      src={img}
      width={50}
    />
  ) : extension ? (
    <Picture
      pictureAttributes={{class: `inline-block align-baseline`}}
      class={`${className}`}
      loading="eager"
      alt={`icon-${alt}`}
      src={img}
      width={50}
      formats={["webp", "avif"]}
    />
  ) : (
    <span
      class={`inline-block bg-gray-500 opacity-50 rounded-full ${className}`}
    />
  )
}
