---
import BaseCard from "./BaseCard.astro";
const { class: className, ...rest } = Astro.props;
---

<BaseCard class={`${className}`} {...rest}>
  <section class="h-full relative">
    <div
      class="h-full before:left-0 before:absolute before:block before:bg-[linear-gradient(180deg,_#b9e3ed_75%,_#a7a1ff)] before:w-[8px] before:h-full before:content-[''] before:rounded-full"
    >
      <ul
        class="h-full pl-5 py-2 flex flex-col gap-4 justify-between [&>li]:relative [&>li]:before:left-[-24px] [&>li]:before:top-[3px] [&>li]:before:absolute [&>li]:before:block [&>li]:before:bg-blue-400 [&>li]:before:w-[16px] [&>li]:before:h-[16px] [&>li]:before:rounded-full"
      >
        <li>
          <p>2016-04-01</p>
          <p>法政大学 情報科学部 入学</p>
        </li>
        <li>
          <p>2020-04-01</p>
          <p>エヌ・ティ・ティ・コムウェア株式会社 入社</p>
        </li>
        <li>
          <p>2023-09-01</p>
          <p>リビン・テクノロジーズ株式会社 入社</p>
        </li>
      </ul>
    </div>
  </section>
</BaseCard>
