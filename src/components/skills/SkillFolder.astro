---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="flex w-fit flex-col gap-2 rounded-2xl bg-gray-400/50 p-4">
  <h2 class="text-md w-fit rounded-full bg-gray-500 px-6 font-bold text-white">{title}</h2>
  <ul class="flex h-full flex-wrap items-center gap-2">
    <slot />
  </ul>
</div>
